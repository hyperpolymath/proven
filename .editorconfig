# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{idr,ipkg}]
indent_size = 2

[*.zig]
indent_size = 4

[*.{py,pyi}]
indent_size = 4

[*.{rs,toml}]
indent_size = 4

[*.{go,mod,sum}]
indent_style = tab
indent_size = 4

[*.{js,ts,jsx,tsx,mjs,mts,json}]
indent_size = 2

[*.{c,h}]
indent_size = 4

[*.{md,adoc}]
trim_trailing_whitespace = false

[*.scm]
indent_size = 2

[Makefile]
indent_style = tab

[*.{yaml,yml}]
indent_size = 2

[*.sh]
indent_size = 2
shell_variant = bash
