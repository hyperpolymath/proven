{
    "name": "hyperpolymath/proven",
    "description": "Code that cannot crash - safe arithmetic, string escaping, path validation, and more",
    "type": "library",
    "license": "PMPL-1.0",
    "keywords": [
        "safety",
        "security",
        "validation",
        "escaping",
        "overflow",
        "xss",
        "sql-injection",
        "path-traversal"
    ],
    "authors": [
        {
            "name": "Hyperpolymath",
            "homepage": "https://github.com/hyperpolymath"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Proven\\": "src/Proven/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Proven\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=8",
        "cs": "phpcs --standard=PSR12 src",
        "cs-fix": "phpcbf --standard=PSR12 src"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
