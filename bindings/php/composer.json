{
    "name": "hyperpolymath/proven",
    "version": "1.0.0",
    "description": "Code that cannot crash - safe arithmetic, string escaping, path validation, and more. 38 modules for safe, crash-free operations.",
    "type": "library",
    "license": "PMPL-1.0",
    "keywords": [
        "safety",
        "security",
        "validation",
        "escaping",
        "overflow",
        "xss",
        "sql-injection",
        "path-traversal",
        "rate-limiting",
        "circuit-breaker",
        "state-machine",
        "tensor",
        "machine-learning"
    ],
    "authors": [
        {
            "name": "Jonathan D.A. Jewell",
            "email": "jonathan.jewell@open.ac.uk"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-mbstring": "*",
        "ext-ffi": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Proven\\": "src/Proven/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Proven\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=8",
        "cs": "phpcs --standard=PSR12 src",
        "cs-fix": "phpcbf --standard=PSR12 src"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "suggest": {
        "ext-bcmath": "For arbitrary precision math operations",
        "ext-gmp": "For large integer operations"
    }
}
